<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #ffffff; /* white background */
            font-family: Arial, sans-serif;
        }

        .header-container {
            background-color: #2d6a4f; /* Dark green */
            padding: 15px 25px;
            border-radius: 10px; /* Rounded corners */
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #ffffff;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            width: 100%;
            align-items: center;
        }

        .w-layout-blockcontainer {
            max-width: 940px;
            margin-left: auto;
            margin-right: auto;
            display: block;
            padding: 0 20px; /* Add padding to the container */
        }

        .heading {
            margin-top: 20px;
            color: #1b4332; /* Very dark green */
            text-align: center;
            border-bottom: 2px solid #95d5b2; /* Light green border */
            padding-bottom: 10px;
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #f0f8f5; /* mint for tables */
            border-radius: 10px; /* Rounded corners */
            overflow: hidden; /* Ensure corners are rounded */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Light shadow for depth */
        }

        table, th, td {
            border: 1px solid #95d5b2; /* Light green borders */
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #40916c; /* Dark green for headers */
            color: #ffffff; /* White text for headers */
        }

        button {
            background-color: #52b788; /* Pastel green button */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
            border-radius: 20px; /* Rounded button */
        }

        button:hover {
            background-color: #2d6a4f; /* Dark green on hover */
            color: white;
        }

        .form-container {
            margin: 20px 0; /* Add margin to the top and bottom of the form sections */
            padding: 20px; /* Add padding inside the form sections */
            border: 1px solid #95d5b2; /* Light green border */
            border-radius: 10px; /* Rounded corners */
            background-color: #ffffff; /* White background for forms */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Light shadow for depth */
        }
    </style>
</head>
<body>
    <div data-animation="default" data-collapse="medium" data-duration="400" data-easing="ease" role="banner" class="w-nav">
        <div class="w-container header-container">
            <div class="header-content">
                <div><strong class="bold-text">B.E.S.T Pharmacy Prescription - <%= name %></strong></div>
                <nav role="navigation" class="nav-menu w-nav-menu">
                    <form action="/logout?_method=DELETE" method="POST">
                        <button class="nav-link fw-bold py-1 px-0 btn p-3 btn-dark text-white" type="submit">Logout</button>
                    </form>
                </nav>
            </div>
        </div>
    </div>

    <div class="w-layout-blockcontainer w-container">
        <h1 class="heading">Manage Patients</h1>
        <section class="form-container">
            <form action="/doctor/manage-patients" method="POST">
                <input type="hidden" name="doctorId" value="<%= doctorId %>">
                <% patients.forEach(function(patient) { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="patientIds" value="<%= patient.name %>">
                        <label class="form-check-label" for="patientIds"><%= patient.name %></label>
                    </div>
                <% }); %>
                <button type="submit" class="btn btn-success">Manage Patients</button>
            </form>
        </section>

        <h1 class="heading">Prescription Management</h1>
        <section>
            <table>
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Prescription</th>
                        <th>Quantity</th>
                        <th>Distributor</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% patients.forEach(function(patient) { %>
                        <% patient.requests.forEach(function(request) { %>
                            <tr>
                                <td><%= patient.name %></td>
                                <td><%= request.prescription %></td>
                                <td><%= request.quantity %></td>
                                <td><%= request.distributor %></td>
                                <td><%= request.status %></td>
                                <td>
                                    <form action="/doctor/update-request-status" method="POST">
                                        <input type="hidden" name="requestId" value="<%= request.id %>">
                                        <input type="hidden" name="patientName" value="<%= patient.name %>">
                                        <select name="status" class="form-select" onchange="this.form.submit()">
                                            <option value="Approved">Yes</option>
                                            <option value="Denied">No</option>
                                        </select>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% }); %>
                </tbody>
            </table>
        </section>

        <h1 class="heading">Add Distributor</h1>
        <section class="form-container">
            <form action="/doctor/add-distributor" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address:</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone:</label>
                    <input type="text" class="form-control" id="phone" name="phone" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="contactPerson" class="form-label">Contact Person:</label>
                    <input type="text" class="form-control" id="contactPerson" name="contactPerson" required>
                </div>
                <button type="submit" class="btn btn-success">Add Distributor</button>
            </form>
        </section>

        <h1 class="heading">Distributor List</h1>
        <section>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Contact Person</th>
                    </tr>
                </thead>
                <tbody>
                    <% distributors.forEach(function(distributor) { %>
                        <tr>
                            <td><%= distributor.name %></td>
                            <td><%= distributor.address %></td>
                            <td><%= distributor.phone %></td>
                            <td><%= distributor.email %></td>
                            <td><%= distributor.contactPerson %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
