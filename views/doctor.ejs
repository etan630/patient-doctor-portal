<body>
    <div data-animation="default" data-collapse="medium" data-duration="400" data-easing="ease" role="banner" class="w-nav">
        <div class="w-container header-container">
            <div class="header-content">
                <div><strong class="bold-text">B.E.S.T Pharmacy Prescription - <%= name %></strong></div>
                <nav role="navigation" class="nav-menu w-nav-menu">
                    <form action="/logout?_method=DELETE" method="POST">
                        <button class="nav-link fw-bold py-1 px-0 btn p-3 btn-dark text-white" type="submit">Logout</button>
                    </form>
                </nav>
            </div>
        </div>
    </div>
    <style>
        .header-container {
            background-color: #f0f0f0; /* Light gray background */
            padding: 10px 20px; /* Padding for the container */
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            width: 100%;
            align-items: center;
        }

        .w-layout-blockcontainer {
            max-width: 940px;
            margin-left: auto;
            margin-right: auto;
            display: block;
        }

        .heading {
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>

    <div class="w-layout-blockcontainer w-container">
        <h1 class="heading">Patient Management</h1>
        <div id="prescription-management" class="section">
            <table>
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Prescribed Medicine</th>
                        <th>Quantity</th>
                        <th>Distributor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="prescription-list">
                    <!-- dynamic stuff here with adding patients-->
                </tbody>
            </table>
            <div id="patient-records">
                <!-- pull dynamic content from patient portal-->
            </div>
        </div>
    </div>

    <div class="w-layout-blockcontainer w-container">
        <h1 class="heading">Inventory Control</h1>
        <div id="inventory-control" class="section">
            <button id="add-distributor">Add Distributor</button>
            <table>
                <thead>
                    <tr>
                        <th>Distributor Name</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Contact Person</th>
                    </tr>
                </thead>
                <tbody id="distributor-list">
                    <!-- content here-->
                </tbody>
            </table>
        </div>
    </div>

    <div class="w-layout-blockcontainer w-container">
        <h1 class="heading">Documentation</h1>
        <div class="patient-requests">
            <table>
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Prescribed Medicine</th>
                        <th>Quantity</th>
                        <th>Distributor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="patient-requests-list">
                    <!-- content here-->
                </tbody>
            </table>
        </div>

        <div class="manufacturer-list">
            <table>
                <thead>
                    <tr>
                        <th>Distributor Name</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Contact Person</th>
                    </tr>
                </thead>
                <tbody id="doc-distributor-list">
                    <!-- content here-->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
